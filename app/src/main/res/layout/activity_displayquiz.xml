<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UI.DisplayquizActivity"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Available Quiz (s)"
        android:id="@+id/textView"
        android:textColor="@color/white"
        android:background="#3985E4"
        android:gravity="center_horizontal" />

    <ListView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/quizList"
    android:paddingBottom="3dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="3dp"
        android:divider="#3985E4"
        android:dividerHeight="1dp"
    android:smoothScrollbar="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Completed Quiz(s)"
        android:textColor="@color/white"
        android:background="#3985E4"
        android:id="@+id/textView2"
        android:gravity="center_horizontal" />

    <ListView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/quizListCompleted"
        android:layout_below="@+id/quizList"
        android:paddingBottom="3dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:divider="#3985E4"
        android:dividerHeight="1dp"
        android:smoothScrollbar="true" />

</LinearLayout>
